# Use left arrow instead of crosshair for default cursor
exec xsetroot -cursor_name left_ptr

# banish cursor at startup
banish

# Silent welcome to ratposion message
startup_message off

# Keybindings can be double checked 
# with <escape>: bind <key> echo test
# <escape> <key>  should echo test

# Change default escape Ctrl-t to Windows space
escape s-space

# Windows j, k for next, prev
definekey top s-j next
definekey top s-k prev

# Apps Windows c for console, windows f for firefox, etc
definekey top s-c exec urxvt 
definekey top s-f exec firefox
definekey top s-v exec vimprobable2
definekey top s-d exec vimprobable2 ~/doc/index.html
